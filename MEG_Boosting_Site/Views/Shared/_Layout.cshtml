<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MEG_Boosting_Site</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MEG_Boosting_Site</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <div class="dropdown">
                                <button type="button" class="btn dropdown-toggle" data-toggle="dropdown">WoW</button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-controller="WorldOfWarcraft" asp-action="RetailIndex">Retail</a>
                                    <a class="dropdown-item" asp-controller="WorldOfWarcraft" asp-action="ClassicIndex">Classic</a>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="LeagueOfLegends" asp-action="Index">League</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Overwatch" asp-action="Index"><img src="images/ow_logo.jpg" alt="" width="40px" height="33px"></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="CSGO" asp-action="Index"><img src="images/csgo_logo.png" alt="" width="39px" height="39px"></a>
                        </li>
                        <li class="nav-item">
                            <div class="dropdown">
                                <button type="button" class="btn dropdown-toggle" data-toggle="dropdown">School</button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-controller="SchoolSubject" asp-action="ROne">R1</a>
                                    <a class="dropdown-item" asp-controller="SchoolSubject" asp-action="RTwo">R2</a>
                                    <a class="dropdown-item" asp-controller="SchoolSubject" asp-action="MOne">Matte 1</a>
                                    <a class="dropdown-item" asp-controller="SchoolSubject" asp-action="MTwo">Matte 2</a>
                                    <a class="dropdown-item" asp-controller="SchoolSubject" asp-action="MThree">Matte 3</a>
                                    <a class="dropdown-item" asp-controller="SchoolSubject" asp-action="DiscreteMOne">Diskret Matte 1</a>
                                    <a class="dropdown-item" asp-controller="SchoolSubject" asp-action="DiscreteMTwo">Diskret Matte 2</a>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Review" asp-action="Index">Reviews</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="CustomOrder" asp-action="Index">Custom Order</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2020 - MEG_Boosting_Site - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
    <script src="https://unpkg.com/axios/dist/axios.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
