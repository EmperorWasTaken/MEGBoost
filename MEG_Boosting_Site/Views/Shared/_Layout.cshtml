<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MEG_Boosting_Site</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/sidebar.css" />
</head>
<body>
<header class="header" id="myHeader">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm  navbar-custom box-shadow ">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/MEG_Boosting_9.png" width="100" height="100"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <partial name="_LoginPartial"/>
                <partial name="_ProductPartial"/>
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <div class="dropdown">
                            <button type="button" class="btn" data-toggle="dropdown"><img src="~/images/wow-logo-navbar.png" width="60px" height="60px"></button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-controller="WorldOfWarcraft" asp-action="RetailIndex">Retail</a>
                                <a class="dropdown-item" asp-controller="WorldOfWarcraft" asp-action="ClassicIndex">Classic</a>
                            </div>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="LeagueOfLegends" asp-action="Index"><img src="~/images/lol-icon.png" width="80px" height="60px"></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Overwatch" asp-action="Index"><img src="~/images/ow_logo.png" alt="" width="107px" height="60px"></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="CSGO" asp-action="Index"><img src="~/images/csgo_logo.png" alt="" width="107px" height="60px"></a>
                    </li>
                    <li class="nav-item">
                        <div class="dropdown">
                            <button type="button" class="btn" data-toggle="dropdown"><img src="~/images/School-Navbar-Icon.png" width="92px" height="60px"></button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-controller="SchoolSubject" asp-action="ROne">R1</a>
                                <a class="dropdown-item" asp-controller="SchoolSubject" asp-action="RTwo">R2</a>
                                <a class="dropdown-item" asp-controller="SchoolSubject" asp-action="MOne">Matte 1</a>
                                <a class="dropdown-item" asp-controller="SchoolSubject" asp-action="MTwo">Matte 2</a>
                                <a class="dropdown-item" asp-controller="SchoolSubject" asp-action="MThree">Matte 3</a>
                                <a class="dropdown-item" asp-controller="SchoolSubject" asp-action="DiscreteMOne">Diskret Matte 1</a>
                                <a class="dropdown-item" asp-controller="SchoolSubject" asp-action="DiscreteMTwo">Diskret Matte 2</a>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<!-- Sidebar -->
<div class="sidenav">
    <div class="list-group list-group-flush sidenav">
        <a asp-controller="Home" asp-action="FAQ" class="list-group-item list-group-item-action">F.A.Q</a>
        <a asp-controller="Home" asp-action="Privacy" class="list-group-item list-group-item-action">Privacy</a>
        <a asp-controller="Home" asp-action="About" class="list-group-item list-group-item-action">About us</a>
        <a asp-controller="Home" asp-action="Contact" class="list-group-item list-group-item-action">Contact</a>
        <a asp-controller="Review" asp-action="Index" class="list-group-item list-group-item-action">Reviews</a>
        <a asp-controller="CustomOrder" asp-action="Index" class="list-group-item list-group-item-action">Custom order</a>
    </div>
</div>
    
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<script src="https://unpkg.com/axios/dist/axios.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
