@model Order

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/lol.css" />
<div>
	<form asp-action="Rankedboost">
	<div class="container col-2" id="LoL_Rankedboost_Player_Server_Container">
		<h2>Your Server</h2>
		<div id="PlayerServer">
			<select asp-for="Server">
					<option disabled value="">Please select one</option>
					<option value="EUW">EUW</option>
					<option value="EUNE">EUNE</option>
					<option value="NA">NA</option>
					<option value="RU">RU</option>
					<option value="Turkey">Turkey</option>
					<option value="JP">JP</option>
					<option value="KR">KR</option>
					<option value="Taiwan">Taiwan</option>
				</select>
		</div>
	</div>
	<div id="LoL_Rankedboost_Player_Username">
		<label asp-for="Username" for="LoL_Username">Username:</label>
		<input asp-for="Username" type="text" id="LoL_Username" name="Username">
	</div>
	<div class="container col-2" id="LoL_Rankedboost_Player_Container">
		<h2>Your rank</h2>
		<div id="PlayerRank">
			<select v-model="playerrank" v-on:change="lolrankcheck($event)" asp-for="CurrentRank">
					<option disabled value="">Please select one</option>
					<option value="Iron">Iron</option>
					<option value="Bronze">Bronze</option>
					<option value="Silver">Silver</option>
					<option value="Gold">Gold</option>
					<option value="Platinum">Platinum</option>
					<option value="Diamond">Diamond</option>
					<option value="Master">Master</option>
					<option value="Grandmaster">Grandmaster</option>
					<option value="Challenger">Challenger</option>
				</select>
			<div>
				<template >
					<select v-model="playerdivision" v-if="flip" asp-for="CurrentTier">
						<option disabled value="">Please select one</option>
						<option>I</option>
						<option>II</option>
						<option>III</option>
						<option>IV</option>
					</select>
				</template>
			</div>
		</div>
	</div>
	<div class="container col-2" id="LoL_Rankedboost_Boost_Container">
		<h2>Boosted rank</h2>
		<div id="BoostRank">
			<select v-model="boostrank" v-on:change="boostrankcheck($event)" asp-for="BoostedRank">
				<option disabled value="">Please select one</option>
				<option value="Iron">Iron</option>
				<option value="Bronze">Bronze</option>
				<option value="Silver">Silver</option>
				<option value="Gold">Gold</option>
				<option value="Platinum">Platinum</option>
				<option value="Diamond">Diamond</option>
				<option value="Master">Master</option>
				<option value="Grandmaster">Grandmaster</option>
				<option value="Challenger">Challenger</option>
			</select>
			<div>
				<template >
					<select v-model="boostdivision" v-if="flip" asp-for="BoostedTier">
						<option disabled value="">Please select one</option>
						<option>I</option>
						<option>II</option>
						<option>III</option>
						<option>IV</option>
					</select>
				</template>
			</div>
		</div>
	</div>
		<div>
			<input type="submit" value="Submit" class="btn btn-primary" id="LoL_Rankedboost_Boost_Button">
		</div>
		<div id="LoLPris">
			<p>pris {{PrisTotal}}â‚¬</p>
		</div>
	</form>
</div>

@{
	
}

@section Scripts
{
	<script src="~/js/Lol.js" asp-append-version="true"></script>
}
