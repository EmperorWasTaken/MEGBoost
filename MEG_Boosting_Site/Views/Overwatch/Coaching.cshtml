@model Order 

@{
	ViewBag.Title = "title";
	Layout = "_Layout";
}
<link rel="stylesheet" href="~/css/ow_ss.css" />

<img src="images/mei_sml.png" alt="" id="sml_csgo_bg">


<div class="content_csgo">
	<div id="OWtest">
		<h1>Overwatch Coaching</h1>
		<p class="subtitle">Let a pro guide you to victory!</p>
		<div style="background-color: transparent; color: white; opacity: 0.8" class="input" id="Platformname">
			<label class="show">{{platname}}</label>
			<label class="hide">Username#4 Digit Number</label>
			<input asp-for="Username" type="text" id="Battlenet_Username" name="Username" class="subtitle">
		</div>
		<div class="col-md-2" style="display: block; width: 70%; padding: 10px; margin-top :20px; margin-bottom: 100px; margin-left: 0px; margin-right: 0px;">
			<span style="color: #787878; font-size: 18px; font-weight: 500;">Amount</span>
			<span id="Coaching">
				<select v-model="Coaching" asp-for="CurrentRank">
					<option value="" disabled selected>Coaching</option>
					<option value="1">1 hour</option>
					<option value="2">2 hours</option>
					<option value="3">5 hours</option>
					<option value="4">10 hours</option>
					<option value="5">25 hours</option>
					<option value="6">50 hours</option>
					<option value="7">100 hours</option>
				</select>
			</span>
			<span style="color: #787878; font-size: 18px; font-weight: 500;">Platform</span>
			<span id="Platform">
				<select v-model="Platform">
					<option value="" disabled selected>Choose your platform</option>
					<option value="1">PC</option>
					<option value="2">Xbox Series X</option>
					<option value="3">Playstation 5</option>
				</select>
			</span>
		</div>
		<div id="total_price" style="color: white; opacity: 0.8; font-size: 16px">
			<p style="font-size: larger">Subtotal: {{PriceTotal}}â‚¬</p>
		</div>
		<div>
			<input type="submit" value="Submit" class="btn btn-dark" id="">
		</div>
	</div>
</div>

@section Scripts
{
	<script src="~/js/overwatch/ow_coach.js" asp-append-version="true"></script>
}